{
  "name": "easey-common",
  "version": "1.0.0",
  "description": "Shared easey npm package",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --colors --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/US-EPA-CAMD/easey-common.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/US-EPA-CAMD/easey-common/issues"
  },
  "homepage": "https://github.com/US-EPA-CAMD/easey-common#readme",
  "dependencies": {
    "@nestjs/common": "^8.0.9",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.0.9",
    "@nestjs/testing": "^8.0.9",
    "@types/jest": "^27.0.2",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "jest-sonar-reporter": "^2.0.0",
    "json2csv": "^5.0.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.1",
    "ts-jest": "^27.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.config.ts",
      "!**/*.module.ts",
      "!routes.ts",
      "!main.ts"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "jest": "^27.2.4"
  },
  "publishConfig": {
    "@US-EPA-CAMD:registry": "https://npm.pkg.github.com"
  }
}
